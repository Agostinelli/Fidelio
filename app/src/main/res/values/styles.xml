<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Chattit" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_chattit</item>
        <item name="popupMenuStyle">@style/PopupMenu.Chattit</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Chattit</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Chattit</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Chattit</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Chattit</item>
        <item name="actionModeBackground">@drawable/cab_background_top_chattit</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_chattit</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Chattit</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.Chattit.Overflow</item>


    </style>

    <style name="Theme.Chattit.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="ActionBar.Solid.Chattit" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_chattit</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_chattit</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_chattit</item>
        <item name="progressBarStyle">@style/ProgressBar.Chattit</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.Chattit.TitleTextStyle</item>
        <item name="android:icon">@mipmap/ic_launcher</item>
        <item name="logo">@mipmap/ic_launcher</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
    </style>
    
    <style name="ActionBar.Solid.Chattit.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ActionBar.Transparent.Chattit" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_chattit</item>
        <item name="progressBarStyle">@style/ProgressBar.Chattit</item>
    </style>

    <style name="PopupMenu.Chattit" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_chattit</item>
    </style>

    <style name="DropDownListView.Chattit" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_chattit</item>
    </style>

    <style name="ActionBarTabStyle.Chattit" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_chattit</item>
    </style>

    <style name="DropDownNav.Chattit" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_chattit</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_chattit</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_chattit</item>
    </style>

    <style name="ProgressBar.Chattit" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_chattit</item>
    </style>

    <style name="ActionButton.CloseMode.Chattit" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_chattit</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Chattit.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Chattit</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Chattit</item>
    </style>

    <style name="AuthBackground">
        <item name="android:background">@drawable/background_fill</item>

    </style>

    <style name="AuthBackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:background">@drawable/background</item>

    </style>

    <style name="AuthTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="AuthTitle.AuthSubTitle">
        <item name="android:layout_below">@+id/title</item>
        <item name="android:textSize">13sp</item>
        <item name="android:text">@string/subtitle</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="AuthFieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@id/subtitle</item>
        <item name="android:layout_marginTop">@dimen/login_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/login_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/login_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/login_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/login_vertical_padding</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AuthEditText" parent="@style/EditTextCustomHolo">
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="GridImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>

    </style>

    // underline purple

    <style name="ButtonAppTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>

    <style name="ImageButtonAppTheme" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>

    <style name="AppTheme" parent="@style/_AppTheme"/>

    <!--   <style name="_AppTheme" parent="android:Theme.Holo.Light"> -->
    <style name="_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>

        <item name="android:buttonStyle">@style/ButtonAppTheme</item>

        <item name="android:imageButtonStyle">@style/ImageButtonAppTheme</item>

    </style>

    <style name="EditTextCustomHolo" parent="android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
    </style>

</resources>













